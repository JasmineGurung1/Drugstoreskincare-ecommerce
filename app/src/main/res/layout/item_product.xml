<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLL"
    android:layout_width="wrap_content"
    android:layout_height="300dp"
    android:layout_centerInParent="true"
    android:layout_margin="15dp"
    android:background="@drawable/single_box"
    android:orientation="vertical"
    android:padding="10dp">


    <ImageView
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:layout_gravity="end"
        android:drawablePadding="15dp"
        android:src="@drawable/ic_wishlist" />

    <ImageView
        android:id="@+id/productIV"
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:src="@drawable/single_product" />

    <TextView
        android:id="@+id/productNameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:singleLine="true"
        android:text="Ordinary Niacinamide"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/discountPriceTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:maxLines="2"
        android:text="Rs. 8000"
        android:textColor="@color/Light_pinK"
        android:textSize="10sp" />


    <TextView
        android:id="@+id/oldPriceTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foreground="@drawable/strike"
        android:maxLines="2"
        android:text="Rs. 10000"
        android:textColor="@color/grey"
        android:textSize="8sp" />

</LinearLayout>
