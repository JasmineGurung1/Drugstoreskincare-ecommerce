<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Setting.changepassword.ChangePasswordActivity">




    <EditText
        android:id="@+id/oldPasswordET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/normal_spacing"
        android:layout_marginTop="@dimen/normal_spacing"
        android:layout_marginEnd="@dimen/normal_spacing"
        android:layout_marginBottom="@dimen/normal_spacing"
        android:hint="Old Password"
        android:inputType="textPassword"
        android:padding="@dimen/margin_ten" />

    <EditText
        android:id="@+id/newPasswordET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_ten"
        android:layout_margin="@dimen/normal_spacing"
        android:hint="New Password"
        android:inputType="textPassword"
        android:layout_below="@+id/oldPasswordET"/>

    <TextView
        android:id="@+id/changeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/newPasswordET"
        android:layout_alignParentRight="true"
        android:layout_marginTop="36dp"
        android:layout_marginRight="162dp"
        android:padding="@dimen/margin_ten"
        android:text="Change"
        android:textColor="@color/Light_pinK"
        android:textSize="20sp"
        android:textStyle="bold" />

