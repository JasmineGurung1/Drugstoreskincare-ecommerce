<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Setting.ContactUsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Light_pinK"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ContactBackIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:padding="@dimen/normal_spacing"
            android:src="@drawable/ic_back"
            app:tint="@color/White" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/normal_spacing"
            android:textSize="24sp"
            android:textColor="@color/White"
            android:layout_centerInParent="true"
            android:text="CONTACT US"
            android:textStyle="bold"/>

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginStart="@dimen/normal_spacing"
        android:layout_marginEnd="@dimen/normal_spacing"
        android:padding="@dimen/normal_spacing"
        android:src="@drawable/ic_phone"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/normal_spacing"
        android:layout_marginStart="@dimen/normal_spacing"
        android:layout_marginEnd="@dimen/normal_spacing"
        android:text="INFORMATION"
        android:textColor="@color/Light_pinK"
        android:textSize="24sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/normal_spacing"
        android:layout_marginEnd="@dimen/normal_spacing"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            android:layout_marginBottom="@dimen/normal_spacing"
            app:cardElevation="@dimen/margin_ten">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F1F1F1">

                <ImageView
                    android:id="@+id/contactIV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/normal_spacing"
                    android:layout_marginTop="@dimen/margin_ten"
                    android:layout_marginEnd="@dimen/normal_spacing"
                    android:layout_marginBottom="@dimen/margin_ten"
                    android:src="@drawable/ic_phone"
                    app:tint="@color/Light_pinK" />

                <TextView
                    android:id="@+id/numberTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/normal_spacing"
                    android:layout_marginBottom="@dimen/normal_spacing"
                    android:layout_toRightOf="@id/contactIV"
                    android:text="9806714523"
                    android:textColor="@color/grey"
                    android:textColorHint="@color/Light_pinK"
                    android:textSize="20sp" />


            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            android:layout_marginBottom="@dimen/normal_spacing"
            app:cardElevation="@dimen/margin_ten">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F1F1F1">

                <ImageView
                    android:id="@+id/mailIV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/normal_spacing"
                    android:layout_marginTop="@dimen/margin_ten"
                    android:layout_marginEnd="@dimen/normal_spacing"
                    android:layout_marginBottom="@dimen/margin_ten"
                    android:src="@drawable/ic_email"
                    app:tint="@color/Light_pinK" />

                <TextView
                    android:id="@+id/EmailTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/normal_spacing"
                    android:layout_marginBottom="@dimen/normal_spacing"
                    android:layout_toRightOf="@id/mailIV"
                    android:text="Drugstoreskincare@gmail.com"
                    android:textColor="@color/grey"
                    android:textSize="20sp" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            android:layout_marginBottom="@dimen/normal_spacing"
            app:cardElevation="@dimen/margin_ten">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F1F1F1">

                <ImageView
                    android:id="@+id/locatedIV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_alignParentLeft="true"
                    android:layout_marginStart="@dimen/normal_spacing"
                    android:layout_marginTop="@dimen/margin_ten"
                    android:layout_marginBottom="@dimen/margin_ten"
                    android:layout_marginEnd="@dimen/normal_spacing"
                    android:src="@drawable/ic_location"
                    app:tint="@color/Light_pinK" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/normal_spacing"
                    android:layout_marginBottom="@dimen/normal_spacing"
                    android:layout_toRightOf="@id/locatedIV"
                    android:gravity="center_vertical"
                    android:text="SimalChaur-8, pokhara "
                    android:textColor="@color/grey"
                    android:textSize="20sp" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            android:layout_marginBottom="@dimen/normal_spacing"
            app:cardElevation="@dimen/margin_ten">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F1F1F1">

                <ImageView
                    android:id="@+id/timeIV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/normal_spacing"
                    android:layout_marginTop="@dimen/margin_ten"
                    android:layout_marginEnd="@dimen/normal_spacing"
                    android:layout_marginBottom="@dimen/margin_ten"
                    android:src="@drawable/ic_time" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/normal_spacing"
                    android:layout_marginBottom="@dimen/normal_spacing"
                    android:layout_toRightOf="@id/timeIV"
                    android:gravity="center_vertical"
                    android:text="8:00 AM - 8:00 PM"
                    android:textColor="@color/grey"
                    android:textSize="20sp" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>

</LinearLayout>